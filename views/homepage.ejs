<body>

  <h1>World Cup Connect</h1>
  
  <form action="/tourists/search" method="get">
    <label for="country">Country:</label>
    <input type="text" id="country" name="country" required>
    <button type="submit">Search</button>
  </form>


  <!-- Send Connection Request Form -->
  <form id="sendRequestForm" action="/connect/send/:receiverId" method="post">
    <label for="receiverId">Receiver ID:</label>
    <input type="text" id="receiverId" name="receiverId" required>
    <button type="submit">Send Connection Request</button>
  </form>

  <!-- Accept Connection Request Form -->
  <form id="acceptRequestForm" action="/connect/accept/:requestId" method="put">
    <label for="requestId">Request ID:</label>
    <input type="text" id="requestId" name="requestId" required>
    <button type="submit">Accept Connection Request</button>
  </form>

  <!-- Decline Connection Request Form -->
  <form id="declineRequestForm" action="/connect/decline/:requestId" method="delete">
    <label for="requestId">Request ID:</label>
    <input type="text" id="requestId" name="requestId" required>
    <button type="submit">Decline Connection Request</button>
  </form>

